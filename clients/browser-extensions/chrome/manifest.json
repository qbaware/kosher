{
    "name": "Kosher",
    "version": "0.0.1",
    "description": "Synchronize and use tabs from all of your browsers into a single unified storage.",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "alarms"
    ]
}