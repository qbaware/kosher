{
  "name": "Kosher",
  "version": "0.0.1",
  "author": "Qbaware",
  "description": "Synchronize and use tabs from all of your browsers into a single unified storage.",
  "manifest_version": 3,
  "action": {
    "default_icon": "./resources/logo.png",
    "default_popup": "./index.html"
  },
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "permissions": [
    "tabs",
    "alarms",
    "identity"
  ],
  "host_permissions": [
    "https://accounts.google.com/*"
  ],
  "oauth2": {
    "client_id": "537590887046-0ov764bagt8ok8gvmg5fob6bcim54gs3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}