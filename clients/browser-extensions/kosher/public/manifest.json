{
  "name": "Kosher",
  "version": "0.0.1",
  "author": "Qbaware",
  "description": "Synchronize and use tabs from all of your browsers into a single unified storage.",
  "manifest_version": 3,
  "action": {
    "default_icon": "./resources/logo.png",
    "default_popup": "./index.html"
  },
  "background": {
    "service_worker": "./scripts/background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://accounts.google.com/*",
    "https://kosher.herokuapp.com/*"
  ]
}
